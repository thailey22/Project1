@page
@model Project1UI.Pages.User.AddInfoModel
@{
    ViewData["title"] = "Add info";
}

<p>Person Info</p>

<div>
    post info
    <form method="post">
        <label asp-for="CurrentUser.Name"></label>
        <input type="text" asp-for="CurrentUser.Name" />
        <label asp-for="CurrentUser.Age"></label>
        <input type="text" asp-for="CurrentUser.Age" />
        <input type="submit" />


    </form>

</div>

<div>
    post info to index
    <form method="post" asp-page=".\Index">
        <label asp-for="CurrentUser.Name"></label>
        <input type="text" asp-for="CurrentUser.Name" />
        <label asp-for="CurrentUser.Age"></label>
        <input type="text" asp-for="CurrentUser.Age" />
        <input type="submit" />


    </form>

</div>

<div>
    Get info from index
    <form method="get" asp-page="./Index">
        <label asp-for="CurrentUser.Name"></label>
        <input type="text" asp-for="CurrentUser.Name" />
        <label asp-for="CurrentUser.Age"></label>
        <input type="text" asp-for="CurrentUser.Age" />
        <input type="submit" value="Submit" />
    </form>
</div>
